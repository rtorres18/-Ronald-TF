<!-- Login Non Modal -->

<div class="container">
  <div class="row">
    <div class="span4 offset4 well">
      <%= form_tag (sessions_path), class: "form" do %>
        <fieldset>
          <legend>Iniciar Sesi√≥n</legend>
          <img src="http://s2.subirimagenes.com/otros/previo/thump_8002320login.jpg" WIDTH=160 HEIGHT=120 BORDER=0 ALT="Logo">
          <div class="control-group">
            <%= label_tag :email, nil ,class: "control-label" %>
            <div class="controls"><%= text_field_tag :email, params[:email], class: "input-xlarge" %></div>
          </div>
          <div class="control-group">
            <%= label_tag :password, nil, class: "control-label"  %>
            <div class="controls"><%= password_field_tag (:password), nil ,class: "input-xlarge" %></div>
          </div>
          <div class="actions"><%= submit_tag t("user.log_in", default: "Ingresar"), class: "btn btn-large btn-primary" %></div>
        </fieldset>
      <% end %>
        <%= link_to t("user.sign_up", default: "Registrase"), new_user_path %>


    </div>
  </div>
</div>

<!-- End of Login Non Modal -->
